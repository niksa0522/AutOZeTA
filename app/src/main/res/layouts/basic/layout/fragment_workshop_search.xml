<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Basic.UI.workshops.WorkshopsSearchFragment">

    <Button
        android:id="@+id/button_services"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/border"
        android:drawableEnd="@android:drawable/arrow_down_float"
        android:drawableTint="?attr/colorOnPrimary"
        android:text="Izaberi servise"
        android:textAlignment="textStart"
        app:backgroundTint="@color/colorTitle"
        app:backgroundTintMode="multiply"
        android:ellipsize="end"
        android:lines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etCena" />

    <Button
        android:id="@+id/buttonRD"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/border"
        android:drawableEnd="@android:drawable/arrow_down_float"
        android:drawableTint="?attr/colorOnPrimary"
        android:text="Izaberi radne dane"
        android:lines="1"
        android:textAlignment="textStart"
        app:backgroundTint="@color/colorTitle"
        app:backgroundTintMode="multiply"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_services" />

    <Button
        android:id="@+id/buttonOcena"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/border"
        android:drawableEnd="@android:drawable/arrow_down_float"
        android:drawableTint="?attr/colorOnPrimary"
        android:text="Izaberi minimalnu ocenu"
        android:textAlignment="textStart"
        android:ellipsize="end"
        app:backgroundTint="@color/colorTitle"
        app:backgroundTintMode="multiply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonRD" />

    <EditText
        android:id="@+id/etNaziv"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/border"
        android:backgroundTint="@color/colorTitle"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:hint="Unesi naziv radionice"
        android:textColor="?attr/colorOnPrimary"
        android:inputType="text"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
        android:paddingLeft="15dp"
        android:textSize="14sp"
        app:backgroundTintMode="multiply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/etCena"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/border"
        android:backgroundTint="@color/colorTitle"
        android:ems="10"
        android:hint="Unesi minimalnu cenu rada"
        android:inputType="number"
        android:paddingLeft="15dp"
        android:textColor="?attr/colorOnPrimary"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
        app:backgroundTintMode="multiply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etNaziv" />

    <Button
        android:id="@+id/btnPretrazi"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:text="Pretrazi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonOcena" />

</androidx.constraintlayout.widget.ConstraintLayout>